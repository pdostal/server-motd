<VirtualHost *:80>
  DocumentRoot /var/www
  ServerName {{ ansible_hostname }}.pdostal.cz
  ServerAlias 127.0.0.1 localhost {{ ansible_hostname }}.pdostal.cz
  <Directory /var/www/>
    Options -Indexes +FollowSymLinks +MultiViews
    AllowOverride All
    Order allow,deny
    allow from all
  </Directory>
</VirtualHost>
