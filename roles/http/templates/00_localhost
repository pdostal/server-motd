server {
  listen 80;
  server_name localhost 127.0.0.1 {{ ansible_hostname }}.pdostal.cz;

  root /var/www;
  index index.html;

  location / {
    try_files $uri $uri/ =404;
  }

  error_page 500 502 503 504  /50x.html;
  location = /50x.html {
    root /usr/local/www/nginx-dist;
  }

  location ~ /\.ht {
    deny all;
  }
}
